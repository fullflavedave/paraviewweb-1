.container {
    width: 100%;
    display: flex;
    align-items: center;
}

.entry {
    flex: 1 0 auto;
}

.button {
    composes: fa        from 'font-awesome/css/font-awesome.css';
    composes: fa-check  from 'font-awesome/css/font-awesome.css';

    margin-left: 10px;
    flex: none;
    cursor: pointer;
    color: #ccc;
}

.editingButton {
    composes: button;
    color: #000;
}
